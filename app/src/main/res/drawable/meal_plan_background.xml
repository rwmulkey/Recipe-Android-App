<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:gravity="center|top"
          android:top="-130dp">
        <rotate
                android:pivotX="50%"
                android:pivotY="50%"
                android:fromDegrees="45"
                android:toDegrees="0">
            <shape
                    android:shape="rectangle" >
                <size android:height="250dp" android:width="250dp"/>
                <stroke android:color="#000000" android:width="3dp"/>
                <solid
                        android:color="#ffffffff" />
            </shape>
        </rotate>
    </item>
    <item android:gravity="center|top"
            android:top="-130dp">
        <rotate
                android:pivotX="50%"
                android:pivotY="50%"
                android:fromDegrees="45"
                android:toDegrees="0">
            <shape
                    android:shape="rectangle" >
                <size android:height="230dp" android:width="230dp"/>
                <solid
                        android:color="#ffbbbbbb" />
            </shape>
        </rotate>
    </item>
</layer-list>