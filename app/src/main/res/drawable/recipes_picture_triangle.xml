<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate
                android:fromDegrees="35"
                android:toDegrees="0"
                android:pivotX="200%"
                android:pivotY="60%" >
            <bitmap android:src="@drawable/veggies"
                    android:gravity="center"/>
        </rotate>
    </item>
    <item
            android:width="200dp">
        <rotate
                android:fromDegrees="35"
                android:toDegrees="0"
                android:pivotX="300%"
                android:pivotY="70%" >

            <shape android:shape="line">
                <stroke
                        android:width="1dp"
                        android:color="#000000"/>
            </shape>
        </rotate>
    </item>
</layer-list>