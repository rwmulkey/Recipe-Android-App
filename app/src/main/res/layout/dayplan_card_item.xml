<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/day_plan_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@android:color/black"/>

    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableRow>
            <ImageView
                    android:id="@+id/day_plan_breakfast_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit_black_24dp"/>
            <TextView
                    android:id="@+id/day_plan_breakfast_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:id="@+id/day_plan_breakfast_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/day_plan_breakfast_title"
                    android:layout_weight=".1"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"/>
        </TableRow>
        <TableRow>
            <ImageView
                    android:id="@+id/day_plan_lunch_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit_black_24dp"/>
            <TextView
                    android:id="@+id/day_plan_lunch_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:id="@+id/day_plan_lunch_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/day_plan_lunch_title"
                    android:layout_weight=".1"/>
        </TableRow>
        <TableRow>
            <ImageView
                    android:id="@+id/day_plan_dinner_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit_black_24dp"/>
            <TextView
                    android:id="@+id/day_plan_dinner_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:id="@+id/day_plan_dinner_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/day_plan_dinner_title"
                    android:layout_weight=".1"/>
        </TableRow>
        <TableRow>
            <ImageView
                    android:id="@+id/day_plan_snack_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit_black_24dp"/>
            <TextView
                    android:id="@+id/day_plan_snack_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:id="@+id/day_plan_snack_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/day_plan_snack_title"
                    android:layout_weight=".1"/>
        </TableRow>
    </TableLayout>

</LinearLayout>